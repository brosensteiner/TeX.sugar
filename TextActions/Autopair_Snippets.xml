<?xml version="1.0" encoding="UTF-8"?>

<action-recipes>
        
        <snippet id="actions.snippets.TeX.WrapBraces" category="actions.snippets.TeX/actions.snippets.TeX.autopairing">
            <title>auto curly braces</title>
            <key-equivalent>shift {</key-equivalent>
		<text>{${EDITOR_SELECTION:${1:happy TeXing!}}}$2</text>
            <syntax-TeX>language-root.tex :not(escape),language-root.tex</syntax-TeX>
        </snippet>
        
        <snippet id="actions.snippets.TeX.WrapBracket" category="actions.snippets.TeX/actions.snippets.TeX.autopairing">
            <title>auto square brackets</title>
		<text>[${EDITOR_SELECTION:${1:happy TeXing!}}]$2</text>
		<key-equivalent>shift [</key-equivalent>
            <syntax-TeX>language-root.tex :not(escape),language-root.tex</syntax-TeX>
        </snippet>
        
        <snippet id="actions.snippets.TeX.WrapParenthesis" category="actions.snippets.TeX/actions.snippets.TeX.autopairing">
            <title>auto parenthesis</title>
            <key-equivalent>cmd (</key-equivalent>
		<text>\(${EDITOR_SELECTION:${1:happy TeXing!}}\)$2</text>
            <syntax-TeX>language-root.tex :not(escape),language-root.tex</syntax-TeX>
        </snippet>
        
</action-recipes> 