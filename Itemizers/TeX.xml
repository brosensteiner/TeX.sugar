	<!--comment-->
	<recipe name="tex.comment">
		<class>ESCommentItem</class>
		<selector>tex.comment.line</selector>
	</recipe>
	
	<!--define/def...-->	
	<recipe name="tex.container.function">
		<selector>tex.comamnd.function.define > name:capture(name)</selector>
	</recipe>
	
	<!--math: math is really special in TeX so it deserves a place in the Navigator :)-->
	<recipe name="tex.container.math">
	
		<class>ESCodeClassItem</class>
		<start-selector>tex.math > begin.math:capture(name)</start-selector>
		<end-selector>tex.math > end.math</end-selector>
